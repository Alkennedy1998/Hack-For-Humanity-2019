<html>

<head>
  <title>Express</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <a href="/videos/upload">Upload your videos here!</a> 
  <h1>Search your video here!</h1>

  <form id = "sbar" >
    <input type ="text" name = "id" id= "search" size = 30>
    <button type="submit" id="submit">Search IDs</button>
  </form>

  <form id = "tbar" >
      <input type ="text" name = "tag" id= "tag" size = 30>
      <button type="submit" id="submit">Search Tags</button>
    </form>

  <script src='https://code.jquery.com/jquery-3.1.0.min.js'></script>
  <script>


    $('#submit').click((e) => {
      e.preventDefault();
      const inputField = $('#search');
      window.location.href = '/videos/stream/' + inputField.val();
    });
  </script>
</body>

</html>
